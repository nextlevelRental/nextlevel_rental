this.fn_callBackMsg = function(strCallBackId,strResult)
{
   trace(" strCallBackId : "  +strCallBackId + " <> strResult : " + strResult);
   
     	if(strResult == "OK")
		{
		  if(strCallBackId == "confirm_1")
		  {
		      alert(" Confirm ok!!!!!");
		  }
		}
		else if(strResult == "CANCEL")
		{
		    alert(" CANCEL");
		}
}


