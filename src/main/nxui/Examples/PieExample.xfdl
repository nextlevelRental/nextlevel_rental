    <Script type="xscript5.0"><![CDATA[
var chart;

this.StackBarSample_onload = function(obj:Form, e:nexacro.LoadEventInfo)
{
	this.drawChart();
}


this.drawChart = function()
{
	if (!chart)
	{	
		var config = {
			"type": "Pie",
			"chart": {
				"id": "pie chart",
				"bindDataset": "ds_pie",
				"bindCategory": "category",
				"bindValue": "value",
				"colors": "color20",
				"plotHoverable": true,
				"radius": 0.9,
				"borderWidth": 2,
				"labelRadius": 0.7,
				"labelFontSize": 10,
				"labelColor": "black",
				"labelFontType": "bold",
				"labelWordwrap": true,
				"labelMaxWidth": 70
			},
			"legend": {
				"align": "center",
				"labelFontSize": 10,
				"switchable": false
			},
			"tooltip": {
				"text": "[%x] browser shares : [%y]% website ",
				"fontType": "normal",
				"fontSize": 10
			}
		};
	
		this.ecochart.set_config(config);
	}
	
	chart = this.ecochart.getChart();
	
	this.ecochart.draw();
}]]></Script>
